/* color variables */
background = #F0F8FF
border = #ddd
purple = #551A8B
dark-purple = #270c40
light-blue = #66b8ff
button-hover = #99cfff

/* menu is a flexbox */
.menu 
    display: flex

.nav
    width: 20%
    margin: auto
    position: fixed
    top: 0px;
    left: 80%
    height: 100%

.nav ul 
  list-style: none;
  background-color: #444;
  text-align: center;
  padding: 0;
  margin: 0;
  width: 100%; /* 80% might give a cool look */
  height: 100%

.nav li 
  font-family: 'Oswald', sans-serif;
  font-size: 1.2em;
  line-height: 40px;
  height: 25%;
  border-bottom: 1px solid #888;
  display: flex;

 
.nav a 
  width: 100%; /* Or whatever */
  text-align: center;
  margin: auto/* ;  Magic! */
  text-decoration: none;
  color: #fff;
  display: block;
  transition: .3s background-color;

 
.nav li:hover 
  background-color: #005f5f;

 
.nav li.active {
  background-color: #fff;
  color: #444;
  cursor: default;
}

html
    height: 100%

body 
    background: background
    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif
    font-size: 20px
    line-height: 1.7
    margin: 0
    position: relative
    min-height: 90%
    width: 100%
    padding-bottom: 60px
    display: flex

.content


footer
    background-color: dark-purple
    height: 50px
    width 100%
    position: absolute
    bottom: 0
    left: 0
    right: 0
    color: background
    text-align: center

h1, h2, h3, h4 
    font-weight: bold
    padding: 0
    width: 80%

h1 
    border-bottom: 1px solid border
    font-size: 1.5em

.blogContent
  width: 80%
  background-color: red;


/* formats menu bar */
.blogMenu 
    text-align:center
    text-decoration: none
    background-color: blue;
    li
        display: inline
        padding:0 30px
    a
        text-decoration: none
        color: purple
    a:hover
        color: dark-purple

.pageHeader 
    text-align: center
    font-size: 1.5em
    background-color: green

.buttonFormat
    font-size: .7em
    color: purple
    border-radius: 4px
    padding: 6px
    cursor: pointer
    background-color: button-hover
    text-decoration: none
    border: 0


.buttonFormat:hover
    background-color: light-blue

.editButtons
    display: inline
    .buttonFormat
        margin: 2px

/* Content formatting (members and events) */
/* Member and event names */
.contentHeader
    font-size: 1em
    font-weight: bold


/* any information associtated with members or events */
.contentInfo
    font-size: .8em




.blogPost
    font-size: 1em

.blogHeader
    font-size: 2em


/* responsive */
@media all and (max-width 640px)
    .inputFormat
        width: 90%

    .pageHeader 
        font-size: 1.3em

    .headerMenu 
        padding-left: 2%
        text-align:center
        li
            font-size: .7em
            padding:0 2%

    .contentInfo
        width: 100%

    .editButtons
        .buttonFormat
            width: 60px

    footer 
        font-size: .7em
    

