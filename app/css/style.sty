/* color variables */
border = #ddd
purple = #551A8B
dark-purple = #270c40
light-blue = #66b8ff
button-hover = #99cfff

/*PALETTE*/
color1 = #306998
color2 = #0291B9
color3 = #515D87 /* dark purple */
color4 = #C6D1E5
color5 = #7DB0D6
color6 = #C0E2FC


side-menu = color3
side-menu-hover = color5
background = color6
footer = color1
/* end color variables */


.nav
    width: 20%
    position: fixed
    top: 0px;
    left: 80%
    height: 100%

.nav ul 
  list-style: none;
  background-color: side-menu;
  text-align: center;
  padding: 0;
  margin: 0;
  width: 100%; /* 80% might give a cool look */
  height: 100%

.nav li 
  font-family: 'Oswald', sans-serif;
  font-size: 1.2em;
  line-height: 40px;
  height: 25%;
  border-bottom: 1px solid #888;
  display: flex;

 
.nav a 
  width: 100%; /* Or whatever */
  text-align: center;
  margin: auto/* ;  Magic! */
  text-decoration: none;
  color: white;
  display: block;
  transition: .3s background-color;

 
.nav li:hover 
  background-color: side-menu-hover;

 
.nav li.active {
  background-color: #fff;
  color: #444;
  cursor: default;
}
/* end menu */



/* for footer */
html
    height: 100%
/* end formatting for footer */

body 
    background: background
    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif
    font-size: 20px
    line-height: 1.7
    margin: 0
    position: relative
    min-height: 90%
    width: 100%
    padding-bottom: 60px

footer
    background-color: footer
    opacity: 0.7
    height: 50px
    width 100%
    position: absolute
    bottom: 0
    left: 0
    right: 0
    color: background
    text-align: center

/* format rest of content 80% to leave room for nav bar */
.pageHeader, .blogContent, .blogMenu
  width: 76%
  margin-left: 2%

/* format menu button for choosing blog */
.blogMenu 
    text-align:center
    text-decoration: none
    li
        display: inline
        padding:0 30px
    a
        text-decoration: none
        color: color1
    a:hover
        color: color3

/* header implemnted in App and Choose */
.pageHeader 
    text-align: center
    font-size: 1.5em








